                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_schedule_grey_14dp"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/text_add_temple_full_moon_prayer_start"
                    style="@style/TimePickerTextTheme.Disabled"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/add_temple_text_time" />

                <TextView
                    style="@style/TimePickerTextTheme.Disabled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="@string/add_temple_text_dash" />

