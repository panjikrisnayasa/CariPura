                    <EditText
                        android:id="@+id/edit_add_temple_melukat_information"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/add_temple_edit_melukat_information"
                        android:importantForAutofill="no"
