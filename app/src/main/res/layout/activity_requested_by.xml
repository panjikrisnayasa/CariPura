<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingTop="24dp"
    android:paddingEnd="16dp"
    android:paddingBottom="24dp"
    tools:context=".view.RequestedByActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_layout_requested_by_full_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/text_input_edit_text_requested_by_full_name"
            style="@style/TextInputEditTextTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_account_box_purple_24dp"
            android:hint="@string/requested_by_text_input_edit_text_full_name"
            tools:text="I Putu Panji Krisnayasa" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_layout_requested_by_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_input_layout_requested_by_full_name">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/text_input_edit_text_requested_by_phone_number"
            style="@style/TextInputEditTextTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_call_purple_24dp"
            android:hint="@string/requested_by_text_input_edit_text_phone_number"
            tools:text="08214531xxxx" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_input_layout_requested_by_phone_number">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/text_input_edit_text_requested_by_email"
            style="@style/TextInputEditTextTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_mail_outline_purple_24dp"
            android:hint="@string/logged_in_text_input_edit_text_email"
            tools:text="panjikrisnayasa@gmail.com" />

    </com.google.android.material.textfield.TextInputLayout>

    <View
        android:id="@+id/view_requested_by_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white" />

    <ProgressBar
        android:id="@+id/progress_requested_by"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>