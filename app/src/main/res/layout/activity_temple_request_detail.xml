                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_dash_dark_grey_4dp"
                        android:gravity="center"
                        android:textColor="@color/colorTextBlack"
                        android:textSize="16sp"
                        tools:text="21.00" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="@string/temple_detail_text_dead_moon"
                        android:textColor="@color/colorTextBlack"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/text_temple_request_detail_dead_moon_prayer_start"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_schedule_purple_14dp"
                        android:gravity="center"
                        android:textColor="@color/colorTextBlack"
                        android:textSize="16sp"
                        tools:text="18.00" />

                    <TextView
                        android:id="@+id/text_temple_request_detail_dead_moon_prayer_end"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_dash_dark_grey_4dp"
                        android:gravity="center"
                        android:textColor="@color/colorTextBlack"
                        android:textSize="16sp"
                        tools:text="21.00" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_temple_request_detail_galungan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
