                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="@string/temple_detail_text_melukat"
                        android:textColor="@color/colorTextBlack"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/text_temple_request_detail_melukat_prayer_start"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_schedule_purple_14dp"
                        android:gravity="center"
                        android:textColor="@color/colorTextBlack"
                        android:textSize="16sp"
                        tools:text="07.00" />

                    <TextView
                        android:id="@+id/text_temple_request_detail_melukat_prayer_end"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
