<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.TempleRequestDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLayoutBackground">

            <com.synnapps.carouselview.CarouselView
                android:id="@+id/carousel_temple_request_detail_photo"
                android:layout_width="match_parent"
                android:layout_height="216dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:slideInterval="10000" />

            <TextView
                android:id="@+id/text_temple_request_detail_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorGreen"
                android:gravity="center"
                android:padding="8dp"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/carousel_temple_request_detail_photo"
                tools:text="Accepted" />

            <LinearLayout
                android:id="@+id/linear_temple_request_detail_layout_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:padding="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_temple_request_detail_label">

                <TextView
                    android:id="@+id/text_temple_request_detail_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gotham_bold"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="24sp"
                    tools:text="Pura Marga Sirsha" />

                <TextView
                    android:id="@+id/text_temple_request_detail_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:drawableStart="@drawable/ic_location_on_purple_14dp"
                    android:drawablePadding="18dp"
                    android:lineSpacingMultiplier="1.5"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="16sp"
                    tools:text="Jl. Pisang Candi Barat No. 100 - 101, Pisang Candi, Sukun" />

                <TextView
                    android:id="@+id/text_temple_request_detail_distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:drawableStart="@drawable/ic_itinerary_purple_14dp"
                    android:drawablePadding="16dp"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="16sp"
                    tools:text="1 km" />

                <TextView
                    android:id="@+id/text_temple_request_detail_duration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:drawableStart="@drawable/ic_motorcycle_purple_14dp"
                    android:drawablePadding="16dp"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="16sp"
                    tools:text="1 minute" />

                <TextView
                    android:id="@+id/text_temple_request_detail_caretaker_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:drawableStart="@drawable/ic_account_box_purple_14dp"
                    android:drawablePadding="16dp"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="16sp"
                    tools:text="Pak Wayan" />

                <TextView
                    android:id="@+id/text_temple_request_detail_caretaker_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:drawableStart="@drawable/ic_call_purple_14dp"
                    android:drawablePadding="16dp"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="16sp"
                    tools:text="08214531xxxx" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/background_rounded">

                        <Button
                            android:id="@+id/button_temple_request_detail_route"
                            style="@style/ButtonTheme.Small.Primary"
                            android:layout_width="wrap_content"
                            android:drawableStart="@drawable/ic_directions_white_14dp"
                            android:text="@string/temple_detail_button_route" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_rounded_stroke">

                        <Button
                            android:id="@+id/button_temple_request_detail_call"
                            style="@style/ButtonTheme.Small.Secondary"
                            android:layout_width="wrap_content"
                            android:drawableStart="@drawable/ic_call_purple_14dp"
                            android:text="@string/temple_detail_button_call" />

                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
