                    android:layout_height="wrap_content"
                    android:text="@string/temple_detail_text_temple_feast_day"
                    android:textColor="@color/colorNegativeButton"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_temple_request_detail_feast_day"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:textColor="@color/colorTextBlack"
                        android:textSize="16sp"
                        tools:text="Purnama Kapat" />

                    <TextView
                        android:id="@+id/text_temple_request_detail_feast_day_start"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_schedule_purple_14dp"
                        android:gravity="center"
                        android:textColor="@color/colorTextBlack"
                        android:textSize="16sp"
                        tools:text="18.00" />

                    <TextView
                        android:id="@+id/text_temple_request_detail_feast_day_end"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_dash_dark_grey_4dp"
                        android:gravity="center"
                        android:textColor="@color/colorTextBlack"
                        android:textSize="16sp"
                        tools:text="21.00" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/temple_detail_text_together_prayer"
                    android:textColor="@color/colorNegativeButton"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="@string/temple_detail_text_full_moon"
                        android:textColor="@color/colorTextBlack"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/text_temple_request_detail_full_moon_prayer_start"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_schedule_purple_14dp"
                        android:gravity="center"
                        android:textColor="@color/colorTextBlack"
                        android:textSize="16sp"
                        tools:text="18.00" />

                    <TextView
