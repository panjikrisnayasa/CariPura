<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/gotham_book</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:fontFamily">@font/gotham_book</item>
    </style>

    <style name="BottomNavigationViewTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/colorUnpressedItem</item>
    </style>

    <style name="TextViewTheme.Bold" parent="TextAppearance.AppCompat.Headline">
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="EditTextTheme" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/background_rounded</item>
        <item name="android:backgroundTint">@color/colorEditTextBackground</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="ButtonTheme" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/background_rounded</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/gotham_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonTheme.Small.Primary" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/gotham_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ButtonTheme.Small.Secondary" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">@font/gotham_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextInputEditTextTheme" parent="Widget.AppCompat.EditText">
        <item name="android:drawablePadding">16dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:textColor">@color/colorTextBlack</item>
    </style>

    <style name="TimePickerTextTheme.Enabled" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/gotham_book</item>
    </style>

    <style name="TimePickerTextTheme.Disabled" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textColor">@color/colorNegativeButton</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/gotham_book</item>
    </style>

</resources>
